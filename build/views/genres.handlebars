<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Genres</title>
</head>
<body onload="getShowGenres()">

    <script>
        function openNav() {
            document.getElementById("mySidebar").style.width = "250px";
            document.getElementById("main").style.marginLeft = "250px";
        }
        function closeNav() {
            document.getElementById("mySidebar").style.width = "0";
            document.getElementById("main").style.marginLeft= "0";
        }
    </script>


    <navBar class="nav">
        <button class="openbtn" onclick="openNav()">☰ Open Sidebar</button>  
        <h2 id="title">What kind of mood are you in?</h2>

    </navBar> 

   <div id="mySidebar" class="sidebar" >
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
        <a href="./browse" class="link-btn" id='home'>Home</a>
        <a href="./accounts" id='account'>Account</a>
        <a href="./favourites" id='favourites'>Favourite</a>
        <a href="./movies">Movies</a>
        <a href="./tvShows">TV Shows</a>
    </div>
    <div id="main">
    </div>
    
    <script>
        var totalGenres = []
        var output = ''
        const getShowGenres = () => {
            const tvShowGenreURL = 'https://api.themoviedb.org/3/genre/tv/list?api_key=27b6fe5df9c85fb31e3d874a62a2154b&language=en-US';
            fetch(tvShowGenreURL)
            .then(res => res.json())
            .then(data => {
                console.log(data)
                const genre = data.genres;
                for (show in genre) {
                    output += `<div class='genre-type'>
                          <h2> ${genre[show].name} </h2>
                          </div>  
                        `
                }
                document.getElementById('genres-container').innerHTML = output;
            })
        }
    </script>

    <div id="genres-container">
        
    </div>
</body>
</html>